const express = require("express");
const router = express.Router();
const passport = require("passport");
const wrapAsync = require("../utils/wrapAsync");
const { saveRedirectUrl } = require("../middleware.js");

const userController = require("../controllers/users.js");

// ✅ Signup Routes
router
  .route("/signup")
  .get(userController.renderSignUpForm); // No more POST here

// ✅ OTP Flow
router.post("/signup/send-otp", wrapAsync(userController.sendOtpVerificationEmail));
router.post("/signup/verify-otp", wrapAsync(userController.verifyOtpAndSignup));

// ✅ Login Routes
router
  .route("/login")
  .get(userController.renderLoginForm)
  .post(
    saveRedirectUrl,
    passport.authenticate("local", {
      failureRedirect: "/login",
      failureFlash: true,
    }),
    userController.login
  );

// ✅ Logout
router.get("/logout", userController.logout);

module.exports = router;