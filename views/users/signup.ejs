<% layout("/layouts/boilerplate") -%>

<div class="row mt-3">
  <h1 class="col-6 offset-3">Sign Up on WanderLust</h1>
  <div class="col-6 offset-3">

    <!-- Step 1: Email + Send OTP -->
    <div id="step1">
      <form id="sendOtpForm" class="needs-validation" novalidate onsubmit="sendOtp(event)">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input name="email" id="email" type="email" class="form-control" required>
          <div class="invalid-feedback">Please provide a valid email.</div>
        </div>
        <button type="submit" class="btn btn-primary">Send OTP</button>
      </form>
    </div>

    <!-- Step 2: Complete Signup -->
    <div id="step2" style="display:none;">
      <form id="signupForm" method="post" action="/signup/verify-otp" class="needs-validation">
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input name="username" id="username" type="text" class="form-control" required>
          <div class="invalid-feedback">Username is required.</div>
        </div>

        <!-- Email is readonly and pre-filled -->
        <div class="mb-3">
          <label for="email2" class="form-label">Email</label>
          <input name="email" id="email2" type="email" class="form-control" readonly required>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input name="password" id="password" type="password" class="form-control" required>
          <div class="invalid-feedback">Password is required.</div>
        </div>

        <div class="mb-3">
          <label for="otp" class="form-label">Enter OTP</label>
          <input
            name="otp"
            id="otp"
            type="text"
            class="form-control"
            required
            maxlength="6"
            minlength="6"
            pattern="[0-9]{6}"
          >
          <div class="invalid-feedback">Please enter the 6-digit OTP sent to your email.</div>
        </div>

        <button type="submit" class="btn btn-success">Complete Signup</button>
      </form>
    </div>

  </div>
</div>

<script>
  async function sendOtp(event) {
    event.preventDefault();
    const emailInput = document.getElementById("email");
    const email = emailInput.value.trim();

    if (!email) {
      alert("Please enter a valid email");
      return;
    }

    try {
      const response = await fetch("/signup/send-otp", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ email })
      });
      const data = await response.json();

      if (data.success) {
        alert("OTP sent to your email!");
        // Hide step 1, show step 2
        document.getElementById("step1").style.display = "none";
        document.getElementById("step2").style.display = "block";
        // Pre-fill email in step 2 and set readonly
        document.getElementById("email2").value = email;
      } else {
        alert(data.message || "Failed to send OTP");
      }
    } catch (err) {
      alert("Error sending OTP: " + err.message);
    }
  }

  // Bootstrap form validation for final signup form
  (function () {
    'use strict'

    const forms = document.querySelectorAll('.needs-validation')

    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }
        form.classList.add('was-validated')
      }, false)
    })
  })()
</script>